[color]
status = auto
diff = auto

[alias]
    s     = status -s
    c     = "commit -m"
    a     = add
    l     = log --graph --topo-order --abbrev-commit --date=short --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset %Cblue%G?%Creset'
    prune = remote prune origin

[push]
	default = simple
	autoSetupRemote = true
[fetch]
	prune = true

[pager]
    branch = false

